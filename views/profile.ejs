<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>

<div class="min-h-screen flex items-center justify-center 
            bg-gradient-to-br from-indigo-100 via-blue-100 to-purple-100 p-6">

  <!-- Card -->
  <div class="relative w-full max-w-sm
              bg-white/80 backdrop-blur-2xl
              rounded-3xl
              shadow-[0_25px_70px_rgba(0,0,0,0.25)]
              border border-white/60
              px-6 py-8">
      <!-- Settings -->
      <div class="absolute top-4 right-4">
        <div class="relative">

          <!-- Button -->
          <button id="settingsBtn"
            class="flex items-center justify-center w-10 h-10
                  rounded-full bg-white/90
                  shadow-md hover:shadow-xl
                  active:scale-95
                  transition-all duration-300">

            <svg class="w-5 h-5 text-gray-600 hover:text-indigo-600"
                fill="none" stroke="currentColor" stroke-width="2"
                viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round"
                d="M12 15.5a3.5 3.5 0 100-7 3.5 3.5 0 000 7z" />
              <path stroke-linecap="round" stroke-linejoin="round"
                d="M19.4 15a1.65 1.65 0 00.33 1.82l.06.06a2 2 0 01-2.83 2.83l-.06-.06a1.65 1.65 0 00-1.82-.33 1.65 1.65 0 00-1 1.51V21a2 2 0 01-4 0v-.09a1.65 1.65 0 00-1-1.51 1.65 1.65 0 00-1.82.33l-.06.06a2 2 0 01-2.83-2.83l.06-.06a1.65 1.65 0 00.33-1.82 1.65 1.65 0 00-1.51-1H3a2 2 0 010-4h.09a1.65 1.65 0 001.51-1 1.65 1.65 0 00-.33-1.82l-.06-.06a2 2 0 012.83-2.83l.06.06a1.65 1.65 0 001.82.33V4a2 2 0 014 0v.09c0 .69.4 1.31 1 1.59.6.28 1.31.17 1.82-.33l.06-.06a2 2 0 012.83 2.83l-.06.06c-.5.5-.61 1.22-.33 1.82.28.6.9 1 1.59 1H21a2 2 0 010 4h-.09c-.69 0-1.31.4-1.51 1z" />
            </svg>
          </button>

          <!-- Dropdown -->
          <div id="settingsMenu"
            class="absolute right-0 mt-3 w-44
                  bg-white rounded-2xl shadow-2xl
                  opacity-0 scale-95 pointer-events-none
                  transition-all duration-300 z-40">

            <a href="#" class="block px-4 py-3 text-sm hover:bg-gray-100 rounded-t-2xl">
              Records
            </a>
            <a href="#" class="block px-4 py-3 text-sm hover:bg-gray-100">
              Service Request
            </a>
            <a href="#" class="block px-4 py-3 text-sm text-red-600 hover:bg-red-50 rounded-b-2xl">
              Logout
            </a>
          </div>

        </div>
      </div>


    <!-- Profile -->
    <div class="flex flex-col items-center text-center mt-6">

      <!-- Avatar -->
      <div class="relative">
        <div class="absolute inset-0 rounded-full 
                    bg-gradient-to-tr from-indigo-500 via-purple-500 to-pink-500 
                    blur-2xl opacity-40"></div>

        <div class="relative w-32 h-32 rounded-full overflow-hidden
                    border-4 border-white shadow-xl">
          <img src="https://easyagrotech.com/wp-content/uploads/2025/12/cropped-Favicon-EG-2-300x300.png"
               class="w-full h-full object-cover" />
        </div>
      </div>

      <!-- Text -->
      <!-- <h2 class="mt-6 text-2xl font-bold text-gray-800">
         <p><strong>Username:</strong> <%= username %></p>
      </h2> -->

      <p class="text-sm text-gray-500 mt-1">
        Easy Agrotech
      </p>
      <p class="text-sm text-gray-500 mt-1">
        Smart Monitoring System
      </p>

      <!-- Divider -->
      <div class="w-16 h-1 bg-gradient-to-r 
                  from-indigo-500 to-purple-500 
                  rounded-full my-5"></div>

      <!-- Logout Button -->
      <button
        class="w-full py-3 rounded-2xl
               bg-gradient-to-r from-red-500 to-pink-500
               text-white font-semibold
               shadow-lg hover:shadow-xl
               hover:scale-[1.02] active:scale-95
               transition-all duration-300 text-xl">
        Logout
      </button>

    </div>

  </div>
</div>



<div
      class="fixed bottom-0 w-full flex justify-around bg-white/95 backdrop-blur-md border-t shadow-lg py-2 sm:py-3 z-50">

      <!-- Dashboard -->
      <a href="/app_data" id="btn-dashboard"
        class="flex-1 flex flex-col items-center justify-center gap-1 py-3 px-2 transition-all duration-300 rounded-lg sm:gap-2 sm:py-4">
        <svg id="icon-dashboard" class="w-6 h-6 sm:w-7 sm:h-7 text-gray-600 transition-colors duration-300"
          fill="currentColor" viewBox="0 0 24 24">
          <path d="M3 9.75L12 3l9 6.75V21a.75.75 0 01-.75.75h-5.25v-6.75H9v6.75H3.75A.75.75 0 013 21V9.75z" />
        </svg>
        <span id="text-dashboard"
          class="text-xs sm:text-sm font-semibold text-gray-600 transition-colors duration-300">Dashboard</span>
      </a>

      <!-- Profile -->
      <a href="/app_data/profile" id="btn-profile"
        class="flex-1 flex flex-col items-center justify-center gap-1 py-3 px-2 transition-all duration-300 rounded-lg sm:gap-2 sm:py-4">
        <svg id="icon-profile" class="w-6 h-6 sm:w-7 sm:h-7 text-red-600 transition-colors duration-300"
          fill="currentColor" viewBox="0 0 24 24">
          <path fill-rule="evenodd"
            d="M12 12c2.7 0 4.875-2.175 4.875-4.875S14.7 2.25 12 2.25 7.125 4.425 7.125 7.125 9.3 12 12 12zm0 1.5c-3.15 0-9.375 1.575-9.375 4.725V21h18.75v-2.775c0-3.15-6.225-4.725-9.375-4.725z"
            clip-rule="evenodd" />
        </svg>
        <span id="text-profile"
          class="text-xs sm:text-sm font-semibold text-red-600 transition-colors duration-300">Profile</span>
      </a>

    </div>

    
     


    <script>
  const btn = document.getElementById("settingsBtn");
  const menu = document.getElementById("settingsMenu");

  btn.addEventListener("click", (e) => {
    e.stopPropagation();
    menu.classList.toggle("opacity-0");
    menu.classList.toggle("scale-95");
    menu.classList.toggle("pointer-events-none");
  });

  document.addEventListener("click", () => {
    menu.classList.add("opacity-0", "scale-95", "pointer-events-none");
  });
</script>


</body>
</html>
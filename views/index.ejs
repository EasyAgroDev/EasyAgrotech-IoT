<!-- User Details -->
<div class="bg-gray-100 min-h-screen p-6 flex flex-col items-center">

    <!-- Header + Search -->
    <div class="flex flex-col sm:flex-row justify-between items-center w-full max-w-6xl mb-4 gap-3">
        <span class="font-bold text-2xl text-gray-800">User Details</span>
        <div class="relative w-full sm:w-80">
            <input id="userSearch" type="text" placeholder="Search User..."
                class="w-full border border-gray-300 rounded-lg pl-10 pr-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-400 shadow-sm">
            <span class="absolute left-3 top-2.5 text-gray-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M21 21l-4.35-4.35M17 11a6 6 0 11-12 0 6 6 0 0112 0z" />
                </svg>
            </span>
        </div>
    </div>

    <!-- Table -->
    <div class="overflow-x-auto w-full max-w-6xl rounded-xl shadow-lg bg-white border border-gray-200">
        <table class="min-w-full text-sm text-gray-700" id="userTable">
            <thead>
                <tr class="bg-indigo-600 text-white">
                    <th class="py-3 px-4 text-left">Sl No.</th>
                    <th class="py-3 px-4 text-left">Name</th>
                    <th class="py-3 px-4 text-left">Group</th>
                    <th class="py-3 px-4 text-left">Phone No.</th>
                    <th class="py-3 px-4 text-left">City</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                <% if (users && users.length > 0) { %>
                    <% users.forEach((user, index) => { %>
                        <% user.groups.forEach(group => { %>
                            <tr class="hover:bg-indigo-50 transition">
                                <td class="py-3 px-4"><%= index + 1 %></td>
                                <td class="py-3 px-4"><%= user.name %></td>
                                <td class="py-3 px-4"><%= group.name %></td>
                                <td class="py-3 px-4"><%= user.phone %></td>
                                <td class="py-3 px-4"><%= user.city %></td>
                            </tr>
                        <% }) %>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="5" class="text-center py-3">No users found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<!-- Search Script -->
<script>
    const userSearchInput = document.getElementById("userSearch");
    const userTable = document.getElementById("userTable").getElementsByTagName("tbody")[0];

    userSearchInput.addEventListener("keyup", function () {
        const filter = userSearchInput.value.toLowerCase();
        const rows = userTable.getElementsByTagName("tr");

        for (let i = 0; i < rows.length; i++) {
            const cells = rows[i].getElementsByTagName("td");
            let textValue = "";
            for (let j = 1; j < cells.length; j++) {
                textValue += cells[j] ? cells[j].textContent.toLowerCase() + " " : "";
            }
            rows[i].style.display = textValue.includes(filter) ? "" : "none";
        }
    });
</script>

<!-- Socket.IO Real-Time Updates -->
<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io();
    socket.on("userUpdate", (change) => {
        console.log("User data changed:", change);
        location.reload(); // reload table when data changes
    });
</script>


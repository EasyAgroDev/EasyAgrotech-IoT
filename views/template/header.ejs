    <!-- Avatar Dropdown -->
    <div class="relative">
      <button id="avatarBtn"
        class="w-10 h-10 flex items-center justify-center bg-white rounded-full shadow hover:scale-105 transition">
        <svg class="w-6 h-6 text-gray-700" fill="currentColor" viewBox="0 0 20 20">

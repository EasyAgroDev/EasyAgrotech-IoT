<%- include('./template/header.ejs') %>

  <div
    class="bg-gradient-to-br from-indigo-200 via-purple-200 to-pink-200 min-h-screen flex items-center justify-center p-6">

    <div class="w-full max-w-lg bg-white rounded-3xl shadow-2xl p-10 transform transition-transform hover:scale-105">

      <div class="flex items-center justify-between mb-8">
        <h2 class="text-3xl font-extrabold text-indigo-700 drop-shadow-md">Create Thing</h2>
        <a href="/project" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg shadow hover:bg-gray-300 transition">
          ‚Üê Back
        </a>
      </div>

      <form class="space-y-6" action="/project/create_thing" method="POST">

        <!-- Project Name -->
        <div>
          <label for="projectName" class="block mb-2 font-semibold text-gray-700">Project Name</label>
          <input type="text" id="projectName" name="projectName" placeholder="Enter project name"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-400 transition shadow-sm"
            required>
        </div>

        <!-- Thing Name -->
        <div>
          <label for="thingName" class="block mb-2 font-semibold text-gray-700">Thing Name</label>
          <input type="text" id="thingName" name="thingName" placeholder="Enter thing name"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-400 transition shadow-sm"
            required>
        </div>

        <!-- Thing ID -->
          <div>
            <label for="thingId" class="block mb-2 font-semibold text-gray-700">Thing ID</label>
            <div class="flex gap-3">
              <input type="text" id="thingId" name="thingId" placeholder="Enter thing ID" maxlength="8" pattern="\d{8}"
                inputmode="numeric" readonly
                class="flex-1 px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-pink-400 transition shadow-sm"
                required>
              <button type="button" id="generateIdBtn"
                class="px-5 py-3 bg-gradient-to-r from-indigo-500 to-purple-500 text-white font-semibold rounded-xl shadow-lg hover:scale-105 transition-transform">
                Generate ID
              </button>
            </div>
          </div>


        <!-- Group Name -->
        <div>
          <label for="groupName" class="block mb-2 font-semibold text-gray-700">Group Name</label>
          <input type="text" id="groupName" name="groupName" placeholder="Enter group name"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-400 transition shadow-sm"
            required>
        </div>

        <!-- Thing Description -->
        <div>
          <label for="thingDescription" class="block mb-2 font-semibold text-gray-700">Thing Description</label>
          <textarea id="thingDescription" name="thingDescription" rows="4" placeholder="Enter description"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-400 transition shadow-sm"
            required></textarea>
        </div>

        <button type="submit"
          class="w-full py-4 bg-gradient-to-r from-purple-500 to-pink-500 text-white font-bold rounded-2xl shadow-xl hover:scale-105 hover:shadow-2xl transition-transform text-lg">
          Create Thing
        </button>
      </form>
    </div>

  </div>

  <script>
    const generateBtn = document.getElementById('generateIdBtn');
    const thingIdInput = document.getElementById('thingId');

    generateBtn.addEventListener('click', () => {
      const uniqueId = Math.floor(10000000 + Math.random() * 90000000);
      thingIdInput.value = uniqueId;
    });
  </script>

  <%- include('./template/footer.ejs') %>